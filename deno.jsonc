{
    "tasks": {
        "clear-dist": "rm -rf dist/*",
        "copy-files-to-dist": "deno run -A https://raw.githubusercontent.com/DenoPlayground/CopyFiles/main/cli.ts ./src/client/ ./dist/ --exts=.html",
        "build": "deno task clear-dist; deno task copy-files-to-dist & deno run -A https://deno.land/x/esbuild@v0.19.4/mod.js --bundle --minify --target=es2022 --outdir=dist ./home/bundle.min=./src/client/home/index.ts",
        "build-watch": "deno task clear-dist; deno task copy-files-to-dist & deno run -A https://deno.land/x/esbuild@v0.19.4/mod.js --bundle --minify --watch --target=es2022 --outdir=dist ./home/bundle.min=./src/client/home/index.ts",
        "build-help": "deno run -A https://deno.land/x/esbuild@v0.19.4/mod.js --help"
    }
}
